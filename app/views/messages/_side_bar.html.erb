<div class = "side-header">
  <div class = "user-name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class = "make-chat">
    <%= link_to 'チャットを作成する', new_room_path %>
  </div>
</div>

<div class = "side-content">
  <% current_user.rooms.each do |r| %>
    <div class = "room">
      <div class = "room-name">
        <a href = "#"><%= r.name %></a>
      </div>
    </div>
  <% end %>
</div>
