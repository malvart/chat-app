<div class = "main-header">
  <div class = "group-name">
    <%= @room.name %>
  </div>
  <div class = "end-chat">
  <a href = "#">チャットを終了する</a>
  </div>
</div>

<div class = "main-content">
  <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message], class: 'main-footer', local: true do |f| %>
  <div class = "input">
    <%= f.text_field :content, class: 'form', placeholder: 'type a message', required: true %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit' %>
<% end %>